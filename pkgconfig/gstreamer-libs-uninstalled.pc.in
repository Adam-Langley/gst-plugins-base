# the standard variables don't make sense for an uninstalled copy
prefix=
exec_prefix=
libdir=${pcfiledir}/..
includedir=${pcfiledir}/..

Name: GStreamer Uninstalled Media-Specific Libraries
Description: Streaming-media framework media-specific libraries, not installed
Version: @VERSION@
Requires: gstreamer = @VERSION@
Libs: -L${libdir}/gst-libs/gst/gconf \
	-L${libdir}/gst-libs/gst/audio \
	-L${libdir}/gst-libs/gst/video \
	-L${libdir}/gst-libs/gst/play
Cflags: -I${includedir}/gst-libs
